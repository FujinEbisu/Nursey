<h1 class="sign-title">Sign up</h1>

<div class="sign-container" data-controller="formulaire">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
      <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label: "Email" %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                label: "Mot de passe" %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" },
                label: "Confirmation du mot de passe" %>

    <%= f.input :first_name,
                required: true,
                input_html: { autocomplete: "first-name" },
                label: "Prénom" %>
    <%= f.input :last_name,
                required: true,
                input_html: { autocomplete: "last-name" },
                label: "Nom" %>
    <%= f.input :userable_type, as: :select, collection: ["Doctor", "Mother"], input_html: {id: 'user_type_select', data: { formulaire_target: "type", action: "change->formulaire#display" }}, label: "Ditez-nous qui vous êtes" %>
    <div data-formulaire-target="doctor" class="d-none">
      <%= f.input :speciality, label: "Spécialité" %>
      <%= f.input :availibity, label: "Disponibilité" %>

  </div>
  <div data-formulaire-target="mother" class="d-none">
      <%= f.input :birthday, label: "Date de naissance" %>

  </div>
  </div>

  <div class="sign-links">
  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "button-standard-dark" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
