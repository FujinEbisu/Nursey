<div class="sign-container">
<h1 class="sign-title">Connexion Ã  Nursey</h1>

<div class="sign-form">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" },
                label: "Email" %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                label: "Mot de passe" %>
    <%= f.input :remember_me, as: :boolean, label: "Se souvenir de moi" if devise_mapping.rememberable? %>
  </div>
  <div class="sign-links">
  <div class="form-actions">
    <%= f.button :submit, "Se connecter", class: "button-standard-dark" %>
  <%= render "devise/shared/links" %>
  </div>
<% end %>
</div>
</div>
</div>