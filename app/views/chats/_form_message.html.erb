<%= simple_form_for [@chat, @message],
  html: {class: "d-flex"} do |f|
%>
  <% other_user = current_user.userable == @chat.doctor ? @chat.mother : @chat.doctor %>
  <%= f.input :content,
    label: false,
    placeholder: "Message #{other_user.last_name}",
    wrapper_html: {class: "flex-grow-1"}
  %>
  <%= f.submit "Send", class: "btn btn-primary mb-3" %>
<% end %>
