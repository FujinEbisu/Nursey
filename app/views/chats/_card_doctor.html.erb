<div class="card-doctor">
  <div class="card-header">
    <div class="doctor-avatar">
      <%= doctor.avatar %>
    </div>
    <div class="doctor-info">
      <h5 class="card-title"><%= doctor.last_name.capitalize %></h5>
      <p class="card-text"><%= doctor.speciality.capitalize %></p>
    </div>
    <div>
    <%= button_to doctor_chats_path(doctor), method: :post, data: { turbo: false } do %>
    <i class="fa-solid fa-pen-to-square"></i>
    <% end %>
  </div>
</div>
</div>
