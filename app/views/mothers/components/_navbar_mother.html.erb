<div class="nav-bar-mother" data-controller="menu-bar-mother">
  <div class="menu-bar">
    <button class="menu__icon button-menu" data-action="click->menu-bar-mother#toggle" data-menu-bar-mother-target="menu-bar-mother">
      <span></span>
      <span></span>
      <span></span>
    </button>
    <div class="no-style">
    <%= link_to questions_path do %>
      <div class="chat-button">
        <i class="fa-solid fa-comment-dots"></i>
      </div>
    <% end %>
    <%= link_to mother_path(@mother) do %>
        <% if @mother.avatar.attached? %>
        <div id="avatar">
          <%= cl_image_tag @mother.avatar.key,  gravity: "auto", height: 600, width: 600, crop: :fill, class: "avatar" %>
        </div>
        <% else %>
          <%= image_tag "https://res.cloudinary.com/dc7iookgc/image/upload/v1747992835/samples/two-ladies.jpg", class: "avatar" %>
        <% end %>
    <% end %>
    </div>
    </div>
  <!-- Menu content shown/hidden -->
  <div class="menu-bar-display">
    <nav class="menu-content">
      <% if current_page?(mothers_path) %>
      <%= link_to "Profil", mother_path(@mother), class: "menu-item" %>
      <% end %>
      <%= link_to "Dashboard", dashboard_index_path, class: "menu-item" %>
      <%= link_to "Historique", mother_feeds_path(@mother), class: "menu-item" %>
      <% if user_signed_in? %>
        <%= link_to "Déconnexion", destroy_user_session_path, data: {turbo_method: :delete}, class: "menu-item" %>
      <% else %>
        <%= link_to "Connexion", new_user_session_path, class: "menu-item" %>
      <% end %>
    </nav>
  </div>

  <div class="user_welcome" data-menu-bar-mother-target="user_welcome">
    <!--  change email for name -->
    <h1 class="welcome-text">Bienvenue <%= @mother.first_name %></h1>
  </div>

<%= link_to 'Nouvelle Tétée', new_mother_feed_path(@mother.id), class: "button-home", data: { menu_bar_mother_target: "nouvelle_tete" } %>
</div>
