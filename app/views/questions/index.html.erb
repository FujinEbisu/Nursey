<% if current_user.userable == @mother %>
  <%= render "mothers/components/navbar_mother_mini" %>
<% else %>
  <%= render "#" %>
<% end %>

<div class="container-chatbot">
  <h1>Votre assistant maternel</h1>
  <div class="message-container">
    <div class="message-content" id="questions" data-controller="messages-modal" data-messages-modal-target="container" >
      <% @questions.each do |question| %>
        <%= render "questions/question", question: question %>
      <% end %>
    </div>
    <div id="new-question-form">
      <%= render "form", question: @question %>
      <div id="scroll-anchor"></div>
    </div>
  </div>

  <div class="button-container">
    <%= link_to "Parler avec un expert", new_chat_path, class: "button-standard" %>
  </div>

  <p class="advising-text">Ceci n'est pas un professionnel de santé, mais un assistant maternel qui vous aide à répondre à vos questions sur l'allaitement maternel, la maternité, et les soins du bébé.</p>

</div>
