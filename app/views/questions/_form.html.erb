<%= simple_form_for question, url: questions_path,
      html: { class: "d-flex", data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" } } do |f| %>
  <%= f.input :mother_question,
    label: false,
    wrapper: false,
    placeholder: "Votre message ici",
    wrapper_html: {class: "flex-grow-1 h-300"}, input_html: { class: "form-control custom-style", data: {action: "keydown->reset-form#handleEnter" }}
  %> 
<%= f.submit "Envoyer", class: "button-standard btnchat" %>

<% end %>
