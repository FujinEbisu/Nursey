  <div class="home-container">
    <div class="home-content">
      <div>
        <h1 class="welcome-text">Bienvenue sur Nursey</h1>
      </div>
      <div class="home-text">
        <p>Pour vous faciliter la vie de maman</p>
      </div>
      <div class="button-container">
        <% if user_signed_in? && current_user.userable_type == "Mother" %>
          <%= link_to mothers_path do %>
          <div class="button-standard-dark">
            Page d'accueil
          </div>
          <% end %>
          <%= link_to destroy_user_session_path, data: {turbo_method: :delete} do %>
          <div class="link">
            Déconnexion
          </div>
          <% end %>
        <% elsif user_signed_in? %>
          <%= link_to doctors_path do %>
          <div class="button-standard-dark">
            Page d'accueil
          </div>
          <% end %>
          <%= link_to destroy_user_session_path, data: {turbo_method: :delete} do %>
          <div class="link">
            Déconnexion
          </div>
          <% end %>
        <% else %>
          <%= link_to new_user_registration_path do %>
          <div class="button-standard-dark">
            Inscription
          </div>
          <% end %>
          <%= link_to new_user_session_path do %>
          <div class="button-standard-dark">
            Connexion
          </div>
          <% end %>
        <% end %>
      </div>
      <div class="phone-mockup">
        <%= image_tag "https://res.cloudinary.com/dc7iookgc/image/upload/v1749734461/Group_31_zd0dms.png", class: "phone-mockup-image" %>
      </div>
    </div>
  </div>
