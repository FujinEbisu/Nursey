<button class="button-standard-dark" data-bs-toggle="modal" data-bs-target="#ModalMotherTetee" data-action="click->chronometer#display" data-chronometer-target="stop">Stop</button>

<!-- MODAL DE TETEE -->
<div class="modal fade" id="ModalMotherTetee" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
       <div class="modal-header justify-content-center">
        <h5 class="modal-title" id="exampleModalLabel">Tirage</h5>
      </div>
      <div class="modal-body">
        <div class="row">
        <h6 class="fw-bolder mb-2">Temps total:</h6>
        </div>
        <%= simple_form_for [@mother, @feed] do |f| %>
          <div class="quantity-tetee">
            <p> Qt/ml:</p>
            <%= f.input :quantity_left, wrapper_html: { class: 'form-group-tetee' }, input_html: { class: 'form-input-modal' }, label: "Gauche"%>
            <%= f.input :quantity_right, wrapper_html: { class: 'form-group-tetee' }, input_html: { class: 'form-input-modal' }, label: "Droit" %>
          </div>
          <%= f.input :time_left, wrapper_html: { class: 'form-group' }, input_html: { class: 'form-input-modal' }, label: "Temps Gauche" %>
          <%= f.input :time_right, wrapper_html: { class: 'form-group' }, input_html: { class: 'form-input-modal' }, label: "Temps Droit" %>
          <%= f.input :comment %>
        <div class="form-inline">
          <%= f.input :mood, as: :radio_buttons, collection: Feed.moods.keys.map {
            |mood| [emoji_for_mood(mood), mood] }, item_wrapper_class: 'emoji-option', label_method: :first, value_method: :last, input_html: {class:"emoji-radio"} %>
        </div>
        <%= f.error :mood %>

          <%= f.input :child_id, as: :select, collection: @mother.children.map { |c| [c.first_name, c.id] }, prompt: "Select child" %>
          <div class="d-flex justify-content-center">
            <%= f.button :submit, class: 'button-standard-dark'%>
          </div>
        <% end %>
      <%# <div class="modal-footer border-top-0">
        <button type="button" class="button-standard" data-bs-dismiss="modal"><a href="">Close</a></button>
        <button type="button" class="button-standard-dark"><a href="">Save changes</a></button>
      </div> %>
    </div>
  </div>
</div>
